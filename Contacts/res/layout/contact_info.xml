<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back_to_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_menu_back" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:singleLine="true"
            android:text="齐天大圣"
            android:textSize="30sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.wecall.contacts.view.DetailBar
                android:id="@+id/phone_num"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#f59563"
                custom:infoText="1234567890"
                custom:infoTextColor="#ffffff"
                custom:infoTextSize="15sp"
                custom:leftBackground="@drawable/sym_action_call"
                custom:rightBackground="@drawable/sym_action_email" >
            </com.wecall.contacts.view.DetailBar>

            <TextView
                android:id="@+id/tv_contact_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_adress_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中山大学"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_contact_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_note_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他是个逗比"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_contact_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_label_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逗比"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.wecall.contacts.view.IconTextView
            android:id="@+id/itv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:icon="@drawable/ic_menu_edit"
            custom:text="编辑" >
        </com.wecall.contacts.view.IconTextView>

        <com.wecall.contacts.view.IconTextView
            android:id="@+id/itv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            custom:icon="@drawable/ic_menu_delete"
            custom:text="删除" >
        </com.wecall.contacts.view.IconTextView>
    </LinearLayout>

</LinearLayout>