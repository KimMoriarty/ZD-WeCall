<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText android:id="@+id/et_contact_label_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="新加标签"/>
    <ImageButton android:id="@+id/ibtn_contact_label_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/easyicon_add"
        android:background="@null"/>
    </LinearLayout>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="已添加标签"/>
    
    <com.wecall.contacts.view.FlowLayout 
        android:id="@+id/fl_label_added"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    </com.wecall.contacts.view.FlowLayout>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="其他标签"/>
    
    <com.wecall.contacts.view.FlowLayout 
        android:id="@+id/fl_label_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    </com.wecall.contacts.view.FlowLayout>

</LinearLayout>
